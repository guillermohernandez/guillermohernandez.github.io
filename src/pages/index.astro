---
import Base from "../layouts/Base.astro";
import { site } from "../content/site";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: site.name,
  url: site.url,
  inLanguage: site.locale,
};
---

<Base
  title={site.name}
  description={site.description}
  canonicalPath="/"
  jsonLd={jsonLd}
>
  <article class="prose">
    <h1>{site.tagline}</h1>
    <p class="lead">{site.description}</p>

    <section class="block"></section>

    <section class="block"></section>
  </article>
</Base>
